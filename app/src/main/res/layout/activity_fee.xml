<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.FeeActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           app:cardBackgroundColor="@color/whiteTextColor"
           app:cardCornerRadius="10dp">
           <LinearLayout
               android:orientation="vertical"
               android:background="@drawable/bg_search"
               android:layout_margin="10dp"
               android:padding="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="300px"
                   android:src="@drawable/img3"
                   android:layout_margin="10px"
                   android:id="@+id/profileimageid"
                   ></ImageView>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Md. X"
                   android:textSize="50px"
                   android:textAlignment="center"
                   android:layout_marginTop="10px"
                   android:id="@+id/nametvid"
                   ></TextView>


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Jessore"
                   android:textSize="50px"
                   android:textAlignment="center"
                   android:layout_marginTop="10px"
                   android:id="@+id/locationtvid"
                   ></TextView>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Fee"
                   android:textSize="50px"
                   android:textAlignment="center"
                   android:layout_marginTop="10px"
                   android:id="@+id/feetvid"
                   ></TextView>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Speciality"
                   android:textSize="50px"
                   android:textAlignment="center"
                   android:layout_marginTop="10px"
                   android:id="@+id/speciality"
                   ></TextView>

<!--               <TextView-->
<!--                   android:layout_width="match_parent"-->
<!--                   android:layout_height="wrap_content"-->
<!--                   android:text="Is Available"-->
<!--                   android:textSize="50px"-->
<!--                   android:textAlignment="center"-->
<!--                   android:layout_marginTop="10px"-->
<!--                   android:id="@+id/isAvailable"-->
<!--                   ></TextView>-->

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Feed Back"
                   android:textSize="50px"
                   android:textAlignment="center"
                   android:layout_marginTop="10px"
                   android:id="@+id/feedBackId"
                   ></TextView>

               <Button
                   android:layout_margin="5dp"
                   android:padding="5dp"
                   android:layout_width="wrap_content"
                   android:layout_gravity="center"
                   android:layout_height="40dp"
                   android:text="See Reviews"
                   android:textAlignment="center"
                   android:layout_marginTop="10px"
                   android:id="@+id/reviewBtId"
                   android:background="@drawable/bg_button"
                   android:textAllCaps="false"
                   ></Button>

               <Button
                   android:layout_width="wrap_content"
                   android:layout_gravity="center"
                   android:layout_height="40dp"
                   android:layout_margin="5dp"
                   android:padding="5dp"
                   android:text="Add Baby"
                   android:textAlignment="center"
                   android:layout_marginTop="10px"
                   android:id="@+id/addBabyBtId"
                   android:background="@drawable/bg_button"
                   android:textAllCaps="false"
                   ></Button>
           </LinearLayout>
       </androidx.cardview.widget.CardView>

   </ScrollView>

</LinearLayout>