<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_search"
    android:id="@+id/babyListLinearLayoutId"
    android:elevation="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/babyImage"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:background="@drawable/img_main" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/babyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nunito_bold"
                android:lines="2"
                android:maxLines="2"
                android:text="Baby Name"
                android:textColor="@color/dark_late_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/babyLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nunito_bold"
                android:lines="1"
                android:maxLines="1"
                android:text="Location"
                android:textColor="@color/black_soft"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/babyAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nunito_bold"
                android:lines="1"
                android:maxLines="1"
                android:text="Age"
                android:textColor="@color/black_soft"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/babyMotherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nunito_bold"
                android:lines="1"
                android:maxLines="1"
                android:text="Mother Name"
                android:textColor="@color/black_soft"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/babyFatherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nunito_bold"
                android:lines="1"
                android:maxLines="1"
                android:text="Father Name"
                android:textColor="@color/black_soft"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/babyContactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nunito_bold"
                android:lines="1"
                android:maxLines="1"
                android:text="Contact Number"
                android:textColor="@color/black_soft"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/babyFevoriteFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nunito_bold"
                android:lines="1"
                android:maxLines="1"
                android:text="Fevorite Food"
                android:textColor="@color/black_soft"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/babyIsChecked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nunito_bold"
                android:lines="1"
                android:maxLines="1"
                android:text="Is Sicked?"
                android:textColor="@color/black_soft"
                android:visibility="gone"
                android:textSize="14sp" />
            <Button
                android:id="@+id/deleteBaby"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_button"
                android:text="Delete Baby"
                android:textColor="#FF1100"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>