<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/cancelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="#F44336"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_gravity="right"
            android:background="#111"
            ></TextView>



            <TextView
                android:layout_margin="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textSize="40px"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_marginTop="10px"
                android:id="@+id/startDateTvId"
                ></TextView>

            <Button
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:text="Start Date"
                android:textAlignment="center"
                android:layout_marginTop="10px"
                android:id="@+id/startDateBtId"
                android:background="@drawable/bg_button"
                ></Button>


            <TextView
                android:layout_margin="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textSize="40px"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginTop="10px"
                android:id="@+id/endDateTvId"
                ></TextView>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="End Date"
                android:textAlignment="center"
                android:layout_marginTop="10px"
                android:id="@+id/endDateBtId"
                android:background="@drawable/bg_button"
                android:textAllCaps="false"
                ></Button>

        <TextView
            android:id="@+id/shifTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Shift"
            android:textColor="#000"
            android:textSize="20dp"
            android:padding="5dp"
            ></TextView>

        <CheckBox
            android:id="@+id/dayCheckboxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"/>
        <CheckBox
            android:id="@+id/nightCheckboxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night"/>

        <TextView
            android:id="@+id/specialityTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Speciality"
            android:textColor="#000"
            android:textSize="20dp"
            android:padding="5dp"
            ></TextView>

        <CheckBox
            android:id="@+id/singerCheckboxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Singer"/>
        <CheckBox
            android:id="@+id/writerCheckboxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Writer"/>
        <CheckBox
            android:id="@+id/actCheckboxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acting"/>
        <CheckBox
            android:id="@+id/DrowingCheckboxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drowing"/>

        <Button
                android:layout_width="180dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:textSize="40px"
                android:textAlignment="center"
                 android:layout_marginTop="10px"
                android:id="@+id/filterButtonId"
                android:background="@drawable/bg_button"
                ></Button>
        </LinearLayout>






</LinearLayout>